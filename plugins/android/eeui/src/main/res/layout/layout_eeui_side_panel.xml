<?xml version="1.0" encoding="utf-8"?>
<app.eeui.framework.ui.component.sidePanel.view.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_sliding"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 左侧菜单 -->
    <ScrollView
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <LinearLayout
            android:id="@+id/v_sliding_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


        </LinearLayout>

    </ScrollView>

    <!-- 右侧内容 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/v_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


        </LinearLayout>

    </FrameLayout>

</app.eeui.framework.ui.component.sidePanel.view.SlidingMenu>
